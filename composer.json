{
  "name": "ddlzz/amocrm-api-client",
  "description": "An AmoCRM API library",
  "homepage": "https://github.com/ddlzz/amocrm-api-client",
  "license": "MIT",
  "authors": [
    {
      "name": "Andrew Alyamovsky",
      "email": "ddlzz@yandex.ru"
    }
  ],
  "type": "library",
  "scripts": {
    "test": "phpunit --configuration phpunit.xml"
  },
  "require": {
    "php": ">=5.6"
  },
  "require-dev": {
    "php": ">=7.0",
    "phpunit/phpunit": "6.4.*",
    "squizlabs/php_codesniffer": "3.*",
    "mikey179/vfsStream": "1.6.*",
    "php-mock/php-mock": "2.0.*",
    "roave/security-advisories": "dev-master",
    "friendsofphp/php-cs-fixer": "^2.11"
  },
  "autoload": {
    "psr-4": {
      "ddlzz\\AmoAPI\\": "src/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
        "branch-alias": {
            "dev-bugfix": "1.0.x-dev"
        }
    }
}
